{
	"manifest_version": 2,

	"name": "VersionOne Enhancements",
	"version": "1.0.4",

	"icons": {
		"16": "16x16.png",
		"32": "32x32.png",
		"48": "48x48.png",
		"128": "128x128.png"
	},

	"permissions": [
		"https://www8.v1host.com/*",
		"storage"
	],

	"externally_connectable": {
		"ids": [
			"*"
		],
		"matches": ["*://www8.v1host.com/*"]
	},

	"content_scripts": [
		{
			"matches": ["*://www8.v1host.com/*"],
			"js": ["content.js"]
		}
	],

	"web_accessible_resources": [
		"/injected.js"
	],

	"browser_action": {
		"default_title": "Заменяет wysiwyg в v1",
		"default_icon": "48x48.png"
	},

	"options_page": "options.html"
}